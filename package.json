{
	"name": "@sapphire/cf-workers-slash-commands-docs",
	"version": "1.0.0",
	"description": "Cloudflare Worker Slash Commands handler for documentation purposes",
	"main": "dist/index.js",
	"license": "MIT",
	"private": true,
	"scripts": {
		"lint": "eslint src tests --ext ts --fix",
		"format": "prettier --write {src,tests}/**/*.ts",
		"update": "yarn upgrade-interactive --latest",
		"build": "rollup -c",
		"watch": "rollup -wc",
		"commit": "git-cz",
		"cz": "git-cz",
		"prepare": "husky install .github/husky"
	},
	"dependencies": {
		"discord-api-types": "^0.18.0",
		"rollup-plugin-inject-process-env": "^1.3.1",
		"tslib": "^2.2.0",
		"tweetnacl": "^1.0.3"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^2.2.1",
		"@cloudflare/wrangler": "^1.16.0",
		"@commitlint/cli": "^12.1.1",
		"@commitlint/config-conventional": "^12.1.1",
		"@rollup/plugin-commonjs": "^18.0.0",
		"@rollup/plugin-node-resolve": "^11.2.1",
		"@sapphire/eslint-config": "^3.0.3",
		"@sapphire/prettier-config": "^1.0.9",
		"@sapphire/ts-config": "^2.1.1",
		"cz-conventional-changelog": "^3.3.0",
		"dotenv": "^8.2.0",
		"husky": "^6.0.0",
		"lint-staged": "^10.5.4",
		"prettier": "^2.2.1",
		"pretty-quick": "^3.1.0",
		"rollup": "^2.44.0",
		"rollup-plugin-cleaner": "^1.0.0",
		"rollup-plugin-terser": "^7.0.2",
		"rollup-plugin-typescript2": "^0.30.0",
		"typescript": "^4.2.4"
	},
	"files": [],
	"engines": {
		"node": ">=15",
		"npm": ">=6"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*.{mjs,js,ts}": "eslint --fix --ext mjs,js,ts"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"resolutions": {
		"acorn": "^8.1.1",
		"minimist": "^1.2.5",
		"kind-of": "^6.0.3",
		"dot-prop": "^6.0.1",
		"marked": "^2.0.3"
	},
	"prettier": "@sapphire/prettier-config"
}
