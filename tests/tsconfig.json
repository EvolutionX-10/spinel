{
	"extends": "../tsconfig.base.json",
	"compilerOptions": {
		"noEmit": true,
		"incremental": false,
		"rootDir": ".",
		"baseUrl": ".",
		"paths": {
			"#utils/*": ["../src/lib/util/*"],
			"#types/*": ["../src/lib/types/*"],
			"#constants/*": ["../src/lib/constants/*"],
			"#api/*": ["../src/lib/api/*"],
			"#env/*": ["../src/lib/env/*"],
			"#lib/*": ["../src/lib/*"]
		}
	},
	"include": ["."],
	"references": [{ "path": "../src" }]
}
